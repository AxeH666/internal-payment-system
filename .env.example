# Internal Payment Workflow System - Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# Django Configuration
SECRET_KEY=                            # Required: Django secret key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DEBUG=False                            # Required: Set to False in production
ALLOWED_HOSTS=localhost,127.0.0.1     # Required: Comma-separated list of allowed hosts

# Database Configuration (PostgreSQL)
POSTGRES_DB=internal_payment            # Required: Database name
POSTGRES_USER=postgres                  # Required: Database user
POSTGRES_PASSWORD=                      # Required: Database password (MUST be set, no default)
POSTGRES_HOST=postgres                  # Required: Database host ('postgres' for docker-compose, 'localhost' for local)
POSTGRES_PORT=5432                      # Required: Database port

# Note: DATABASE_URL is not currently parsed by backend settings.
# Keep POSTGRES_* variables as the canonical configuration scheme.
# DATABASE_URL=postgresql://user:password@host:port/dbname

# JWT Configuration
JWT_SIGNING_KEY=                       # Optional: Separate JWT signing key (defaults to SECRET_KEY if not set)

# CORS Configuration (if needed)
CORS_ALLOWED_ORIGINS=                  # Optional: Comma-separated list of allowed CORS origins

# Logging Configuration
LOG_LEVEL=INFO                         # Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FORMAT=json                        # Optional: Log format (json or text)

# Media Files
MEDIA_ROOT=/app/media                  # Optional: Media files root directory

# Static Files
STATIC_ROOT=/app/staticfiles           # Optional: Static files root directory

# Production Settings
HTTPS_ENFORCED=False                   # Required: Set to True in production to enforce HTTPS
SECURE_SSL_REDIRECT=False             # Required: Set to True in production
SESSION_COOKIE_SECURE=False           # Required: Set to True in production
CSRF_COOKIE_SECURE=False              # Required: Set to True in production
